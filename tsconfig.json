{
  "compilerOptions": {
    "lib": ["es2021"],
    "module": "commonjs",
    "target": "es2021",

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    "declaration": true,
    "declarationDir": "types",
    "outDir": "dist"
  },
  "exclude": [
    "node_modules",
    "dist",
    "types",
  ]
}
